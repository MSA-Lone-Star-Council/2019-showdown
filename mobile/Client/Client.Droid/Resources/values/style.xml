<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- inherit from the material theme -->
  <style name="UTColors" parent="Theme.AppCompat">
	<!-- Main theme colors -->
	<!--   your app branding color for the app bar -->
	<item name="android:colorPrimary">@color/primaryColor</item>
	<!--   darker variant for the status bar and contextual app bars -->
	<item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
	<!--   theme UI controls like checkboxes and text fields -->
	<item name="android:colorAccent">@color/secondaryColor</item>
	<!-- -->
	<item name="android:windowBackground">@color/backgroundColor</item>
	<!-- -->
	<item name="android:navigationBarColor">@color/navigationBarColor</item>
	<!-- -->
	<item name="android:textColorPrimary">@color/primaryTextColor</item>
	<item name="android:actionBarStyle"   tools:ignore="NewApi">@style/UTActionBar</item>
	<item name="actionBarStyle">@style/UTActionBar</item>
  </style>

  <style name="UTActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
	<item name="android:background"  tools:ignore="NewApi">@color/primaryColor</item>
	<item name="background">@color/primaryColor</item>
	<item name="android:elevation">0dp</item>
	<item name="elevation">0dp</item>
  </style>

  <style name="AnnouncementSecondary">
	<item name="android:textSize">14sp</item>
	<item name="android:textColor">@color/secondaryDarkTextColor</item>
  </style>

  <style name="EventSecondary">
	<item name="android:fontFamily">sans-serif</item>
	<item name="android:textSize">14sp</item>
	<item name="android:textColor">@color/secondaryDarkTextColor</item>
	<item name="android:paddingLeft">16dp</item>
  </style>
</resources>
